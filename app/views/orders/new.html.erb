<section class="section">
  <p class="mb-5 is-size-2">Checkout</p>
  <p class="mt-2 mb-5 is-size-4 is-italic	">Please fill in your delivery and personal data:</p>
  <%= form_with url: orders_url, method: :post, model: @order do |f| %>
    <div class="box">
      <div class="level">
        <div class="level-left box is-flex-direction-column">
          <div class="field">
            <label class="label">Name</label>
            <div class="control">
              <%= f.text_field :name, placeholder: "Name...", class: "input" %>
            </div>
          </div>
          <div class="field">
            <label class="label">City</label>
            <div class="control">
              <%= f.text_field :city, placeholder: "City...", class: "input" %>
            </div>
          </div>

          <div class="field">
            <label class="label">Street</label>
            <div class="control">
              <%= f.text_field :street, placeholder: "Street...", class: "input" %>
            </div>
          </div>

          <div class="field">
            <label class="label">Country</label>
            <div class="control">
              <div class="select" style="max-width: 273px">
                <%= f.select :country, COUNTRIES, class: "select" %>
              </div>
            </div>
          </div>

          <div class="field">
            <label class="label">Province</label>
            <div class="control">
              <%= f.text_field :province, placeholder: "Province, state, etc.", class: "input" %>
            </div>
          </div>

          <div class="field">
            <label class="label">Zip_code</label>
            <div class="control">
              <%= f.text_field :zip_code, placeholder: "Zip-code/Postal Code", class: "input" %>
            </div>
          </div>

        </div>
        <div class="level-right box is-flex-direction-column">
          <%= render partial: "cart_state" %>
        </div>
      </div>
      <div class="level">
        <div class="box is-flex-direction-column">
          <div class="field">
            <label class="label">Payment Method:</label>
            <div class="control">
              <div class="select">
                <%= f.select :delivery_method, %w[ups gls dpd fedex postal], class: "select" %>
              </div>
            </div>
          </div>
          <div class="field">
            <label class="label">Delivery Method</label>
            <div class="control">
              <div class="select">
                <%= f.select :payment_method, %w[cash card transfer online], class: "select" %>
              </div>
            </div>
          </div>
          <p class="mb-3 mt-5 is-size-4">Your Total: <%= current_user.cart.total %></p>
          <div class="field is-grouped">
            <div class="control">
              <button class="button is-link">Submit</button>
            </div>
            <div class="control">
              <button class="button is-link is-light">Cancel</button>
            </div>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</section>



